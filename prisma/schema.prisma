// Prisma schema replacing Supabase
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // Include engine for local dev and Vercel's Linux environment
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

enum Status {
  CLAIMED
  WAITING
  EXPIRED
}

model ParkingCode {
  codigo             String  @id
  status             Status
  fecha_creacion     DateTime @default(now())
  fecha_actualizacion DateTime @updatedAt
}

model AuditLog {
  id          Int      @id @default(autoincrement())
  created_at  DateTime @default(now())
  usuario_id  String?
  ip          String
  accion      String
  datos       Json
  codigo      String?
}