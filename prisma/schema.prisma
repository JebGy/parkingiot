// Prisma schema replacing Supabase
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // Include engine for local dev and Vercel's Linux environment
  binaryTargets = ["native", "rhel-openssl-3.0.x", "debian-openssl-3.0.x", "linux-musl"]
  engineType = "binary"
}

enum Status {
  CLAIMED
  WAITING
  EXPIRED
}

enum PaymentStatus {
  PENDING
  PAID
}

enum PaymentMethod {
  CASH
  CARD
}

model ParkingCode {
  codigo             String  @id
  status             Status
  fecha_creacion     DateTime @default(now())
  fecha_actualizacion DateTime @updatedAt
  space_id           Int?
  space              ParkingSpace? @relation(name: "SpaceCodes", fields: [space_id], references: [id])
  payments           Payment[]
}

model AuditLog {
  id          Int      @id @default(autoincrement())
  created_at  DateTime @default(now())
  usuario_id  String?
  ip          String
  accion      String
  datos       Json
  codigo      String?
}

// Estado de los espacios de parking (1-3)
model ParkingSpace {
  id         Int      @id
  occupied   Boolean  @default(false)
  updated_at DateTime

  logs SpaceLog[]
  codes ParkingCode[] @relation(name: "SpaceCodes")
}

// Historial de cambios de espacios
model SpaceLog {
  id         Int      @id @default(autoincrement())
  space_id   Int
  occupied   Boolean
  timestamp  DateTime @default(now())
  ip         String?

  space ParkingSpace @relation(fields: [space_id], references: [id], onDelete: Cascade)

  @@index([space_id, timestamp])
}

model Payment {
  id           Int           @id @default(autoincrement())
  codigo       String
  code         ParkingCode   @relation(fields: [codigo], references: [codigo])
  space_id     Int
  amount       Decimal       @db.Decimal(10,2)
  amount_calculated Decimal  @db.Decimal(10,2)
  amount_final Decimal       @db.Decimal(10,2)
  time_used_minutes Int
  currency     String        @default("PEN")
  status       PaymentStatus @default(PENDING)
  method       PaymentMethod?
  receipt_number String?
  created_at   DateTime      @default(now())
  paid_at      DateTime?

  @@index([space_id, status])
}